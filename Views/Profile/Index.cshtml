@model DirectorySite.Models.UserResponse

@{
    ViewData["ActivePage"] = "Perfil";
    string PictureUrl = string.Format("http://ui-avatars.com/api/?color=333&amp;rounded=true&amp;name={0}", Model.FullName.Replace(" ", "+"));
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-main">
                <h4 class="text-capitalize breadcrumb-title">@ViewBag.Title</h4>
                <div class="breadcrumb-action justify-content-center flex-wrap">
                    <partial name="../Shared/Breadcrumb">
                </div>
            </div>
        </div>

        @if (ViewBag.Success != null)
        {
            <div class="col-lg-12">
                <div class="alert alert-success">@ViewBag.Success</div>
            </div>
        }

        <div class="col-xxl-3 col-lg-4 col-sm-5">
            <!-- Profile Acoount -->
            <div class="card mb-25">
                <div class="card-body text-center p-0">
                    <div class="account-profile border-bottom py-4 px-2 pb-0 flex-column d-flex align-items-center ">
                        <div class="mb-2 border rounded-circle" style="height: 150px; width:150px;">
                            <img class="rounded-circle my-2" alt="Imagen de perfil" width="150" height="150" src="@PictureUrl" />
                        </div>
                        <div class="ap-nameAddress pb-3">
                            <h5 class="ap-nameAddress__title">@Model.FullName</h5>
                            <p class="ap-nameAddress__subTitle fs-14 m-0">@Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Profile Acoount End -->
        </div>


        <div class="col-xxl-7 col-lg-6 col-sm-5">
            <div class="mb-4">
                <div class="d-flex flex-column">
                    <div class="mb-2">
                        <partial name="./Partials/EditAccountCard.cshtml" model="@Model" />
                    </div>

                    <div class="mb-2">
                        <partial name="./Partials/EditPasswordCard.cshtml" model="@Model"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body
    {
        background-color: #f0f0f0 !important;
    }
</style>