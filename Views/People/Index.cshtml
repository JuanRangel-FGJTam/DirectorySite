@model IEnumerable<DirectorySite.Models.PersonResponse>?
@{
    ViewData["Title"] = "Personas";
    ViewData["ActivePage"] = "Personas";
}

@Html.Partial("../Shared/Breadcrumb")

<div class="fluid-container ">
    <div class="row align-items-start">
        <div class="col-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre completo</th>
                    <th scope="col">Curp</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Fecha nacimiento</th>
                    <th scope="col">Correo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                    }
                    @foreach( var person in Model??[] ){
                        <tr>
                            <td scope="row"> @i </td>
                            <td>
                                <div class="text-sm">@person.PersonId</div>
                            </td>
                            <td>
                                <div class="text-sm">@person.FullName</div>
                            </td>
                            <td>@person.Curp</td>
                            <td>@person.GenderName</td>
                            <td>@person.BirthdateFormated</td>
                            <td>@person.Email </td>
                        </tr>
                        i++;
                    }
            </table>
        </div>
    </div>
</div>