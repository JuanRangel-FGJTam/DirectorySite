@model IEnumerable<PersonDocumentResponse>

<div class="">
    <ul class="list-group list-group-flush">
        @foreach(var personDocument in Model)
        {
            <li class="list-group-item d-grid" style="grid-template-columns: 1fr 1fr;">
                <h6 class="mb-0" style="grid-area: 1/1/2/2;">@personDocument.DocumentTypeName</h6>
                <div class="text-muted" style="font-size:.75rem; grid-area: 2/1/3/2;">Registro: @personDocument.CreatedAt?.ToString("dd/MM/yyyy")</div>
                <div class="text-muted d-flex align-items-center justify-content-end" style="grid-area: 1/2/3/3;">
                    @if(personDocument.FileUrlBack != null)
                    {
                        <a class="text-muted" href="@personDocument.FileUrl" target="_blank" rel="noopener noreferrer" data-toggle="tooltip" data-placement="top" title="Identification parte delantera">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                                <g fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="4">
                                    <rect width="40" height="32" x="4" y="8" rx="2"/>
                                    <path fill="currentColor" d="M17 25a4 4 0 1 0 0-8a4 4 0 0 0 0 8Z"/>
                                    <path stroke-linecap="round" d="M23 31a6 6 0 0 0-12 0m17-11h8m-6 8h6"/>
                                </g>
                            </svg>
                        </a>

                        <a class="text-muted" href="@personDocument.FileUrlBack" target="_blank" rel="noopener noreferrer" data-toggle="tooltip" data-placement="top" title="Identification parte trasera">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                                <g fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="4">
                                    <path d="M42 8H6a2 2 0 0 0-2 2v28a2 2 0 0 0 2 2h36a2 2 0 0 0 2-2V10a2 2 0 0 0-2-2Z"/>
                                    <path d="M36 16h-8v8h8z"/>
                                    <path stroke-linecap="round" d="M12 32h24M12 16h6m-6 8h6"/>
                                </g>
                            </svg>
                        </a>
                    }
                    else
                    {
                        <a class="text-muted" href="@personDocument.FileUrl" target="_blank" rel="noopener noreferrer" data-toggle="tooltip" data-placement="top" title="Identification">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                                <g fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="4">
                                    <rect width="40" height="32" x="4" y="8" rx="2"/>
                                    <path fill="currentColor" d="M17 25a4 4 0 1 0 0-8a4 4 0 0 0 0 8Z"/>
                                    <path stroke-linecap="round" d="M23 31a6 6 0 0 0-12 0m17-11h8m-6 8h6"/>
                                </g>
                            </svg>
                        </a>
                    }
                </div>
            </li>
        }
        @if(!Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                Sin documentos registrados
            </div>
        }
    </ul>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}