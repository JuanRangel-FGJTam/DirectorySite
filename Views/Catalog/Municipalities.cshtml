@model DirectorySite.Models.ViewModel.CatalogStatesViewModel

<partial name="./Partials/PageHeader" />

<div class="fluid-container ">
    <div class="row align-items-start">
        <div class="col-2">
            <partial name="./Partials/CatalogSidebar"/>
        </div>

        <div class="col-10">
            <form asp-action="Municipalities" method="get" id="formFilters" class="d-flex align-items-center  border rounded px-2 py-1 mb-2">
                <select id="selectCountry" asp-for="CountryId" asp-items="@(Model.CountriesCatalog)" class="form-select-sm mr-1 me-1" style="max-width: 16rem;">
                    <option value="0">Seleccione un elemento</option>
                </select>

                <select id="selectState" asp-for="StateId" asp-items="@(Model.StateCatalog)" class="form-select-sm mr-1 me-1" style="max-width: 16rem;">
                    <option value="0">Seleccione un elemento</option>
                </select>

                <button type="button" class="ml-auto ms-auto btn btn-success" data-bs-toggle="modal" data-bs-target="#newElementModal">Agregar nuevo</button>
            </form>

            <div class="border rounded">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model.Municipalities != null){
                            var i = 1;
                            foreach(var item in Model.Municipalities){
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-action="Colonies" asp-controller="Catalog" asp-route-stateId="@Model.StateId" asp-route-municipalityId="@item.Id" class="btn btn-link m-0 p-0" tabindex="-1" role="button" aria-disabled="true">
                                            Mostrar Colonias
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="newElementModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <form class="modal-content" id="new-element-form">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar elemento</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
            <label for="new-element-name" class="col-form-label">Nombre:</label>
            <input type="text" class="form-control" id="new-element-name">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-success" id="new-element-submit" >Guardar Cambios</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    <script>

        /**
        * @@param {Event} event
        */
        function handleNewElementFormSubmit(event){
            event.preventDefault();
            
            // * retrive the input text
            let _inputName = "";
            try {
                _inputName = $("#new-element-name").val();
            }catch(err){
                console.error(err);
            }

            // * validate if the input is not null or empty
            if( _inputName === null || _inputName.trim() === ""){
                return;
            }

            submitNewElement(_inputName);
        }

        /**
        * @@param {String} newElement
        */
        function submitNewElement(newElement){
            $.ajax("/catalog/occupations", {
                method: 'POST',
                data: {
                    name: newElement
                },
                contentType: 'application/x-www-form-urlencoded',
                success: (data, status, jqXHR)=>{
                    console.dir(data);
                    console.dir(status);
                    if(status == 'success'){
                        dimissModal();

                        var {message} = data;
                        alert(message);
                    }
                }
            }).done(function(){
                //
            }).fail(function(err){
                const {statusText} = err;
                console.dir(statusText);
                console.error(err);
            });
        }

        function dimissModal(){
            $("#new-element-name").val("");
            $("#newElementModal").modal('hide');
        }

        $(document).ready(function(){
            $("#new-element-form").submit(handleNewElementFormSubmit);
            
            $("#selectCountry").on("change", function(e){
                var constryId = $(this).val();
                if (isNaN(constryId) || constryId <= 0) {
                    event.preventDefault();
                    return;
                }
                $("#selectState").val(0);
                $("#formFilters").submit();
            });

            $("#selectState").on("change", function(e){
                var constryId = $(this).val();
                if (isNaN(constryId) || constryId <= 0) {
                    event.preventDefault();
                    return;
                }
                $("#formFilters").submit();
            });
        });
    </script>
}