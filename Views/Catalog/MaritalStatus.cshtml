@model IEnumerable<DirectorySite.Models.MaritalStatus>?
@{
    ViewData["Title"] = "Catalog Page";
    ViewData["ActivePage"] = "Marital Status";
}

@Html.Partial("./Partials/PageHeader")

<div class="fluid-container ">
    <div class="row align-items-start">
        <div class="col-2">
            @Html.Partial("./Partials/CatalogSidebar")
        </div>

        <div class="col-10">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if( Model != null){
                        var i = 1;
                        foreach( var item in Model! ){
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm px-4" tabindex="-1" role="button" aria-disabled="true">Show</a>
                                    <a href="#" class="btn btn-primary btn-sm px-4" tabindex="-1" role="button" aria-disabled="true">Edit</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>