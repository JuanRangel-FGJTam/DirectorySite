@model IEnumerable<DirectorySite.Models.DocumentType>?
@{
    ViewData["Title"] = "Catalogo - Tipos de Documentos";
    ViewData["ActivePage"] = "Tipos de Documentos";
}

<partial name="./Partials/PageHeader" />

<div class="fluid-container ">
    <div class="row align-items-start">
        <div class="col-2">
            <partial name="./Partials/CatalogSidebar" />
        </div>

        <div class="col-10 d-flex flex-column">
            <div class="d-flex justify-content-end my-2">
                <a asp-action="CreateDocumentType" class="btn btn-primary btn-sm">Agregar Nuevo </a>
            </div>
            <div class="border rounded">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model != null){
                            var i = 1;
                            foreach(var item in Model!)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-action="EditDocumentType" asp-route-documentTypeId="@item.Id" class="btn btn-edit btn-sm text-primary" tabindex="-1" role="button" aria-disabled="true">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 1025 1023">
                                                <path fill="currentColor" d="M896.428 1023h-768q-53 0-90.5-37.5T.428 895V127q0-53 37.5-90t90.5-37h576l-128 127h-384q-27 0-45.5 19t-18.5 45v640q0 27 19 45.5t45 18.5h640q27 0 45.5-18.5t18.5-45.5V447l128-128v576q0 53-37.5 90.5t-90.5 37.5m-576-464l144 144l-208 64zm208 96l-160-159l479-480q17-16 40.5-16t40.5 16l79 80q16 16 16.5 39.5t-16.5 40.5z"/>
                                            </svg>
                                        </a>
                                        <a documentType="@item.Id" class="btn btn-del btn-sm text-danger" tabindex="-1" role="button" aria-disabled="true">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 448 512">
                                                <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/catalog/documentType.js"></script>
}