@model DirectorySite.Models.ViewModel.CatalogStatesViewModel

<partial name="./Partials/PageHeader" />

<div class="fluid-container ">
    <div class="row align-items-start">
        <div class="col-2">
            <partial name="./Partials/CatalogSidebar"/>
        </div>

        <div class="col-10">
            <form asp-action="Colonies" method="get" id="formFilters" class="d-grid align-items-center border rounded px-2 py-1 mb-2" style="grid-template-columns: 1fr 9rem;">
                <div class="d-flex flex-wrap">
                    <select id="selectCountry" asp-for="CountryId" asp-items="@(Model.CountriesCatalog)" class="form-select form-select-sm mr-1 me-1 my-1" style="max-width: 12rem;">
                        <option value="0">Seleccione un elemento</option>
                    </select>

                    <select id="selectState" asp-for="StateId" asp-items="@(Model.StateCatalog)" class="form-select form-select-sm mr-1 me-1 my-1" style="max-width: 12rem;">
                        <option value="0">Seleccione un elemento</option>
                    </select>

                    <select id="selectMunicipality" asp-for="MunicipalityId" asp-items="@(Model.MunicipalitiesCatalog)" class="form-select form-select-sm mr-1 me-1 my-1" style="max-width: 12rem;">
                        <option value="0">Seleccione un elemento</option>
                    </select>

                    <div class="input-group input-group-sm my-1" style="width: 12rem;">
                        <span class="input-group-text">
                            <svg width="12" height="12" aria-hidden="true" data-prefix="fal" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-search fa-w-16 fa-7x"><path fill="currentColor" d="M508.5 481.6l-129-129c-2.3-2.3-5.3-3.5-8.5-3.5h-10.3C395 312 416 262.5 416 208 416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c54.5 0 104-21 141.1-55.2V371c0 3.2 1.3 6.2 3.5 8.5l129 129c4.7 4.7 12.3 4.7 17 0l9.9-9.9c4.7-4.7 4.7-12.3 0-17zM208 384c-97.3 0-176-78.7-176-176S110.7 32 208 32s176 78.7 176 176-78.7 176-176 176z" class=""></path>
                            </svg>
                        </span>
                        <input id="tb_search" asp-for="SearchText" type="search" class="form-control" placeholder="Buscar..." />
                    </div>
                </div>

                <button type="button" class="ml-auto ms-auto mb-auto btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#newElementModal">
                    <svg width="12" height="12" aria-hidden="true" data-prefix="far" data-icon="plus" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="svg-inline--fa fa-plus fa-w-12 fa-7x"><path fill="currentColor" d="M368 224H224V80c0-8.84-7.16-16-16-16h-32c-8.84 0-16 7.16-16 16v144H16c-8.84 0-16 7.16-16 16v32c0 8.84 7.16 16 16 16h144v144c0 8.84 7.16 16 16 16h32c8.84 0 16-7.16 16-16V288h144c8.84 0 16-7.16 16-16v-32c0-8.84-7.16-16-16-16z" class=""></path></svg>
                    Agregar Nuevo
                </button>
            </form>

            <div class="border rounded">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Municipio</th>
                            <th scope="col">Codigo Postal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model.Colonies != null){
                            var i = 1;
                            foreach(var item in Model.Colonies!){
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    @{
                                        var _name = new string?[]{ item.Municipality?.Name, item.Municipality?.State?.Name, item.Municipality?.State?.Country?.Name };
                                    }
                                    <td class="small pt-2">@string.Join(", ", _name).ToUpper()</td>
                                    <td class="text-center">@item.ZipCode</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="newElementModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <form id="new-element-form" class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar elemento</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div class="mb-2">
            <label for="new-element-country" class="col-form-label">Pais</label>
            @Html.TextBoxFor(item => item.CountryId, new { @class="form-control", @hidden="true"})
            @Html.TextBoxFor(item => item.CountryName, new { @class="form-control", @disabled="true"})
        </div>
        
        <div class="mb-2">
            <label for="new-element-country" class="col-form-label">Estado</label>
            @Html.TextBoxFor(item => item.StateId, new { @class="form-control", @hidden="true"})
            @Html.TextBoxFor(item => item.StateName, new { @class="form-control", @disabled="true"})
        </div>

        <div class="mb-2">
            <label for="new-element-country" class="col-form-label">Municipio</label>
            @Html.TextBoxFor(item => item.MunicipalityId, new { @class="form-control", @hidden="true"})
            @Html.TextBoxFor(item => item.MunicipalityName, new { @class="form-control", @disabled="true"})
        </div>

        <div class="mb-2">
            <label for="new-element-name" class="col-form-label">Nombre:</label>
            <input type="text" class="form-control" id="new-element-name" name="name" required>
        </div>
        
        <div class="mb-2">
            <label for="new-element-name" class="col-form-zipcode">Codigo Postal:</label>
            <input type="number" class="form-control" id="new-element-zipcode" name="zipcode" required>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-success" id="new-element-submit" >Guardar Cambios</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    <script>

        function handleSubmitForm(event){
            event.preventDefault();
            
            const form = $(this);
            const dataForm = form.serialize();
            
            $.ajax({
                url: '/catalog/colonies',
                type: 'POST',
                data: dataForm,
                success: function(response) {
                    Swal.fire({
                        title: "Datos actualizados",
                        icon: "success"
                    })
                    .then(()=>{
                        dimissModal();
                        location.reload();
                    });
                },
                error: function(xhr, status, error) {
                    if(xhr.status == 422)
                    {
                        const { errors } = xhr.responseJSON || {};
                        const errorMessages = errors ? Object.values(errors).flat().join('\n') : "Datos inválidos.";
                        Swal.fire({
                            title: "Uno o más datos son inválidos",
                            text: errorMessages,
                            icon: "warning",
                            confirmButtonText: "Revisar"
                        });
                        return;
                    }

                    Swal.fire({
                        title: "Error al actualizar los datos",
                        text: xhr.statusText || "Error desconocido",
                        icon: "error"
                    });
                }
            });
        }

        function dimissModal(){
            $("#new-element-name").val("");
            $("#newElementModal").modal('hide');
        }

        $(document).ready(function()
        {
            @* select the default values *@
            $("#selectState").val('@Model.StateId');
            $("#selectMunicipality").val('@Model.MunicipalityId');

            $("#new-element-form").submit(handleSubmitForm);
            
            $("#selectCountry").on("change", function(e){
                var constryId = $(this).val();
                if (isNaN(constryId) || constryId <= 0) {
                    event.preventDefault();
                    return;
                }
                $("#selectState").val(0);
                $("#selectMunicipality").val(0);
                $("#formFilters").submit();
            });

            $("#selectState").on("change", function(e){
                var constryId = $(this).val();
                if (isNaN(constryId) || constryId <= 0) {
                    event.preventDefault();
                    return;
                }
                $("#selectMunicipality").val(0);
                $("#formFilters").submit();
            });

            $("#selectMunicipality").on("change", function(e){
                var constryId = $(this).val();
                if (isNaN(constryId) || constryId <= 0) {
                    event.preventDefault();
                    return;
                }
                $("#formFilters").submit();
            });
        });

    </script>
}