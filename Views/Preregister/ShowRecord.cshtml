@model PreregisterResponse?
@{
    ViewData["Title"] = Model!=null ?"Preregistro " + Model.Id :"Registro no encontrado";
    ViewData["ActivePage"] = "Preregistros";
}

<div class="d-flex align-items-baseline mb-2">
  <h1 class="display-6">@ViewBag.Title</h1>
  <div class="ms-auto">
    <partial name="../Shared/Breadcrumb">
  </div>
</div>

@if(Model == null)
{
  <div class="container rounded bg-white">
    <div class="row">
      <partial name="~/Views/Shared/ErrorAlert.cshtml"/>
    </div>
  </div>
}
else
{
  <div class="container rounded bg-white">
    <div class="row">

      <div class="col-12 mb-2 p-1 border-bottom">
          <h4>Datos generales</h4>
      </div>

      <div class="col-md-6">
        <label class="label">Correo</label>
        <input type="text" class="form-control" disabled value="@Model.Mail">
      </div>

      <div class="col-md-6">
        <label class="label">Fecha Registro</label>
        <input type="text" class="form-control" disabled value="@Model.CreatedAt">
      </div>

      <div class="col-md-6">
        <label class="label">Ultima Actualizacion</label>
        <input type="text" class="form-control" disabled value="@Model.UpdatedAt">
      </div>

      <div class="col-md-6">
        <label class="label">Válido Hasta</label>
        <input type="text" class="form-control" disabled value="@Model.ValidTo">
      </div>

      <div class="col-12">
        <label class="label">Token</label>
        <textarea type="text" class="form-control" rows="3" disabled>@Model.Token</textarea>
      </div>

    </div>

    <div class="row mt-4">

      <div class="col-12">
        <div class="border border-danger rounded shadow-sm d-flex p-4">
          <div>
            <p>
              <strong>Eliminar Registro</strong>
              <br/>
              Eliminar registro del sistema, esta es una accion irreversible.
            </p>
            
          </div>

          <form asp-controller="Preregister" asp-action="DeleteRecord" asp-route-recordID="@Model.Id" method="post" class="ms-auto">
            <button type="submit" class="btn btn-danger d-flex align-items-center justify-content-around py-2" style="width: 12rem;" >
              <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="currentColor" viewBox="0 0 448 512"><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/></svg>
              <span>Eliminar Registro</span>
            </button>
          </form>

        </div>
      </div>
      
    </div>
  </div>
}

<style>
  .label {a
      margin-top: .3rem;
  }
</style>